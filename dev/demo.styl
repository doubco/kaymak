// font
@import url("http://fonts.googleapis.com/css?family=Montserrat:400,700")


// nib
@import '../bower_components/nib'

// normalize
@import "../bower_components/normalize-styl/_normalize"

global_reset()

// base link coloring
link(color,hover)
	a:link,a:visited
		relative:top left
		color: color
		text-decoration: none
		padding-bottom:5px
		border-bottom:1px solid rgba(0,0,0,0)
		transition: border 0.2s
	a
		@media only screen and (min-width:1250px) 
			&:hover
				color: hover
				border-bottom:1px solid hover
		@media only screen and (max-width:1250px)
			&:active
				color: hover
				border-bottom:1px solid hover

// general
html,body
	font-family: 'Montserrat'
	font-size: 15px
	line-height: 25px
	color: #fff
	background: #222
	font-weight: 400
	link(#c0c0c0,#FFD72E)
	-webkit-tap-highlight-color: rgba(0,0,0,0)
	width:100%
// base classes
b,strong
	font-weight: 700

.separator
	size: 100% 50px

.clear
	clear:both

.put-left
	float: left

.put-right
	float: right

.wrapper
	width:900px
	margin:0 auto
	@media only screen and (max-width:700px) 
		width:300px
	@media only screen and (min-width:700px) and (max-width:1000px)
		width:600px

.title
	font-size: 40px
	line-height: 50px
	.tiny
		font-size: 20px

.sub-title
	font-size: 20px
	line-height: 50px
	.tiny
		margin-left: 5px
		font-size: 10px

.inline-icon
	font-size: 40px
	relative:top 4px left

.doub-logo
	float: right
	size:50px
	line-height: 40px
	font-size: 50px

.devices
	size:100% 150px
	line-height: 300px
	font-size: 300px
	// text-align: center
	overflow:hidden
	span
		relative:top -100px left -30px

.description
	code
		white-space:pre
		white-space:pre-wrap
		word-break:break-all
		word-wrap:break-word
	.code
		background: rgba(0,0,0,0.3)
		padding:20px
		font-size: 14px
		margin-top: 10px
		margin-bottom: 10px
		width:860px
		@media only screen and (max-width:700px) 
			width:260px
		@media only screen and (min-width:700px) and (max-width:1000px)
			width:560px

