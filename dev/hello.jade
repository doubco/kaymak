doctype html
html(lang='en')
	head
		//- meta
		meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='description', content='Kaymak.js')
		meta(name='keywords', content='slider,jquery,coffee,hammerjs')

		//- mobile config
		meta(name='viewport', content='width=device-width,height=device-height, initial-scale=1, maximum-scale=1,minimal-ui')
		meta(name='msapplication-tap-highlight', content='no')

		//- css
		link(href='demo.css', rel='stylesheet')
		link(href='kay.css', rel='stylesheet')


		script(src='http://doubco.github.io/kaymak/jquery.min.js')
		script(src='http://doubco.github.io/kaymak/jquery.hammer-full.min.js')
		script(src='http://doubco.github.io/kaymak/jquery.transit.min.js')
		script(src='kay.js')

